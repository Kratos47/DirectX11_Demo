//--------------------------------------------------------------------------------------
// SimpleColorPlus
//--------------------------------------------------------------------------------------

struct VertexData
{
	float4 Pos : POSITION;
	float4 Color : COLOR;
};

struct PixelData
{
	float4 Pos : SV_POSITION;
	float4 Color : COLOR;
};

//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
PixelData VS(VertexData inVert)
{
	return inVert;
}


//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 PS(PixelData inPix) : SV_Target
{
	return inPix.Color;
}
